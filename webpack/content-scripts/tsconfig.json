{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "@types/chrome"
    ],
    "paths": {
      "@/*": ["../../src/*"]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "../../src/types/**/*.ts",
    "../../src/content-scripts/**/*.ts",
    "../../src/content-scripts/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
